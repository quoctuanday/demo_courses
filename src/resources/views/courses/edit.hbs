<div class='mt-3'>
    <h3>Chỉnh sửa khóa học</h3>
    <form method='post' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group mt-4'>
            <label for='name'>Tên khóa học</label>
            <input
                type='text'
                class='form-control'
                value='{{course.name}}'
                id='name'
                name='name'
            />

            <label for='description'>Mô tả</label>
            <textarea
                class='form-control'
                id='description'
                name='description'
            >{{course.description}}
            </textarea>
            <label for='videoId'>Video Id</label>
            <input
                type='text'
                class='form-control'
                value='{{course.videoId}}'
                id='videoId'
                name='videoId'
            />
        </div>
        <button type='submit' class='btn btn-primary mt-3'>Lưu lại</button>
    </form>
</div>